<LoginScreen>:
    id: ID_loginscreen
    name: 'kv_login'
    MDLabel:
        text: 'WEB-CAMERA \nCHEAT DETECTION'
        halign: 'center'
        pos_hint: {'center_x': 0.5, 'center_y': 0.84}
        font_style: 'H6'
        font_size: 40
    MDLabel:
        text: 'Version: 1.2'
        halign: 'center'
        pos_hint: {'center_x': 0.5, 'center_y': 0.74}
