ScreenManager:
    LoginScreen:
    MainStudent:
    LoggedStudent
    MainProfessor:
    LoggedProfessor
    MainAdmin:

<LoginScreen>:
    id: ID_loginscreen
    name: 'kv_login'
    labelID_loginscreen: labelID_loginscreen
    MDLabel:
        id: labelID_loginscreen
        text: 'ONLINE EXAM CHEAT PREDICTION'
        halign: 'center'
        pos_hint: {'center_x': 0.5, 'center_y': 0.9}
        font_size: 30
    Image:
        source: 'UI/students.png'
        allow_stretch: True
        size_hint_x: 0.23
        pos_hint: {'center_x': .25, 'center_y': 0.52}
    Image:
        source: 'UI/teacher.png'
        allow_stretch: True
        size_hint_x: 0.29
        pos_hint: {'center_x': .52, 'center_y': 0.55}
    Image:
        source: 'UI/settings.png'
        allow_stretch: True
        size_hint_x: 0.20
        pos_hint: {'center_x': .77, 'center_y': 0.50}
    BoxLayout:
        orientation: 'horizontal'
        spacing: '50dp'
        padding: '4dp'
        pos_hint: {'center_x': .65, 'center_y': 0.6}
        MagicButton1:
            text: 'Im a STUDENT'
            on_release: 
                self.grow() 
                root.manager.current = 'kv_MainStudent'
                root.manager.transition.direction = "up"
        MagicButton1:
            text: 'Im a PROFESSOR'
            on_release: 
                self.grow()
                root.manager.current = 'kv_MainProf'
                root.manager.transition.direction = "up"
        MagicButton1:
            text: 'ADMIN'
            on_release: 
                self.grow()
                root.manager.current = 'kv_MainAdmin'
                root.manager.transition.direction = "up"


<MainStudent>:
    id: ID_MainStudentScreen
    name: 'kv_MainStudent'
    labelID_studentlabel: labelID_studentlabel
    textID_studentname:  textID_studentname
    textID_roomname: textID_roomname
    textID_roompass: textID_roompass
    MDLabel:
        id: labelID_studentlabel
        text: 'Student Screen'
        halign: 'center'
        pos_hint: {'center_x': 0.5, 'center_y': 0.9}
        font_size: 10
    MDTextField:
        id: textID_studentname
        hint_text: 'STUDENT NAME'
        halign: 'center'
        pos_hint: {'center_x': 0.5, 'center_y': 0.35}
        size_hint: .4, 1
    MDTextField:
        id: textID_roomname
        hint_text: 'ROOM NAME'
        halign: 'center'
        pos_hint: {'center_x': 0.5, 'center_y': 0.2}
        size_hint: .4, 1
    MDTextField:
        id: textID_roompass
        hint_text: 'ROOM PASSWORD'
        halign: 'center'
        pos_hint: {'center_x': 0.5, 'center_y': 0.05}
        size_hint: .4, 1
    MagicButton1:
        text: 'JOIN ROOM'
        pos_hint: {'center_x': .6, 'center_y': 0.2}
        on_release: 
            self.grow()
            root.manager.current = 'kv_LoggedStudent'
            root.manager.transition.direction = "up"
    MagicButton1:
        text: 'HOME'
        pos_hint: {'center_x': .4, 'center_y': 0.2}
        on_release: 
            self.grow()
            root.manager.current = 'kv_login'
            root.manager.transition.direction = "up"


