<LoginScreen>:
    id: ID_loginscreen
    name: 'kv_login'
    labelID_loginscreen: labelID_loginscreen
    MDLabel:
        id: labelID_loginscreen
        text: 'WEBCAM CHEAT DETECTION'
        halign: 'center'
        pos_hint: {'center_x': 0.5, 'center_y': 0.85}
        font_size: 30
    Image:
        source: 'UI/students.png'
        allow_stretch: True
        size_hint_x: 0.23
        pos_hint: {'center_x': .3, 'center_y': 0.52}
    Image:
        source: 'UI/teacher.png'
        allow_stretch: True
        size_hint_x: 0.29
        pos_hint: {'center_x': .7, 'center_y': 0.55}
    MagicButton1:
        text: 'Im a STUDENT'
        pos_hint: {'center_x': .3, 'center_y': 0.30}
        on_release: 
            self.grow() 
            root.manager.current = 'kv_MainStudent'
            root.manager.transition.direction = "up"
    MagicButton1:
        text: 'Im a PROFESSOR'
        pos_hint: {'center_x': .71, 'center_y': 0.30}
        on_release: 
            self.grow()
            root.manager.current = 'kv_MainProf'
            root.manager.transition.direction = "up"


